                        android:text="followers"/>
                </LinearLayout>
                -->
            </LinearLayout>
        </RelativeLayout>
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Mine_friends_marginTop"
            android:background="@color/white"
            android:orientation="vertical">
            <!-- 
              <LinearLayout
                    android:id="@+id/btnFriends" 
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/Mine_layout_height">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Mine_share_marginRight"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/subscribe_textcolor_color"
                    android:text="@string/mine_layout_friends"/>
            </LinearLayout>
                 <View 
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@drawable/home_line"/>
                    -->
                <LinearLayout
                    android:id="@+id/btnNotice"  
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/Mine_layout_height">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Mine_share_marginRight"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/subscribe_textcolor_color"
                    android:text="@string/mine_layout_notice"/>
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@drawable/home_line"/>
                <LinearLayout
                    android:id="@+id/btnFeedback"  
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/Mine_layout_height">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Mine_share_marginRight"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/subscribe_textcolor_color"
                    android:text="@string/mine_layout_feedback"/>
                 </LinearLayout>
                 <View 
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@drawable/home_line"/>
                 </LinearLayout>
                 <LinearLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="@dimen/Mine_friends_height"
                   android:layout_marginTop="@dimen/Mine_friends_marginTop"
                   android:background="@color/white"
                   android:orientation="horizontal">
              <LinearLayout
                   android:id="@+id/myFeed"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
              <LinearLayout 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/Mine_layout_margin"
                  android:layout_gravity="center"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/imgMyfeed" 
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/me_icon_myfeed_select"/>
                   <TextView
                       android:id="@+id/tvMyfeed" 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/Mine_friends_marginLeft"
                       android:textSize="@dimen/Mine_present_text_size"
                       android:textColor="@color/home_bottom_text_press"
                       android:text="@string/mine_layout_myfeed"/>
              </LinearLayout>
              <ImageView
                   android:id="@+id/oneTab" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/channel_item_padding_left"
                   android:background="@drawable/feedback_tab_bar"/>
     </LinearLayout>
               <LinearLayout
                   android:id="@+id/mCollection"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
              <LinearLayout 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/Mine_layout_margin"
                  android:layout_gravity="center"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/imgCollection" 
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/me_icon_collection_normal"/>
                   <TextView 
                       android:id="@+id/tvCollection"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/Mine_friends_marginLeft"
                       android:textSize="@dimen/Mine_present_text_size"
                       android:textColor="@color/subscribe_textcolor_color"
                       android:text="@string/mine_layout_collection"/>
              </LinearLayout>
              <ImageView
                   android:id="@+id/twoTab" 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:layout_marginTop="@dimen/channel_item_padding_left"
                   android:background="@drawable/feedback_tab_bar"/>
           </LinearLayout>
     </LinearLayout>
             <View 
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height"
                android:background="@drawable/home_line"/>
             <LinearLayout 
                 android:id="@+id/layout_list"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
             </LinearLayout>
              <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/Mine_bottom_height"
                  android:visibility="gone"
                  android:background="@color/white">
                <TextView
                    android:id="@+id/textView" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_bottom_padding"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/detail_title_text_color"
                    android:textSize="@dimen/News_text_size_16"
                    android:text="Nothings here!"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/News_text_size_16"
                    android:textColor="@color/detail_title_text_color"
                    android:text="Make a comment int any case"/>
                  
              </RelativeLayout>
            </LinearLayout> 
    </com.trassion.newstop.view.XwScrollView>

</LinearLayout>
