<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/image_loading_bg"
    android:orientation="vertical" >
    <com.trassion.newstop.view.XwScrollView
        android:id="@+id/mXSVContainer_before"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/white"
        android:divider="@null"
        android:scrollbars="none">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_bar_height">
                <Button 
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_padding_left"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/login_icon_arrow_left"/>
                <Button 
                    android:id="@+id/btnSeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="@dimen/Mine_item_text_marginTop"
                     android:background="@drawable/login_icon_setting"/>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/home_line"/>
            </RelativeLayout>
            <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_logo_marginTop"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_logo"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/feedback_layout_marginTop"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/News_text_size_16"
                android:textColor="@color/detail_title_text_color"
                android:text="The Most Convenient News To The World."/>
            <!--  
            <ImageButton 
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_friends_search_marginLeft"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_google"/>
                -->
            <ImageButton 
                android:id="@+id/btnFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/subscribe_text_paddingleft"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_facebook"/>
            <ImageButton 
                android:id="@+id/btnTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/subscribe_text_paddingleft"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_twitter"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/feedback_layout_marginTop"
                android:orientation="horizontal">
                <ImageButton 
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login"/>
                <ImageButton 
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/channel_item_padding_top"
                    android:background="@drawable/btn_email"/>
            </LinearLayout>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dip"
                android:layout_marginBottom="@dimen/nav_bottom_height"
                android:gravity="bottom"
                android:background="@drawable/login_bottom_picture"/>
        </LinearLayout>
    </com.trassion.newstop.view.XwScrollView>
    <com.trassion.newstop.view.XwScrollView
        android:id="@+id/mXSVContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone"
        android:divider="@null"
        android:scrollbars="none">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="@dimen/Mine_top_bg_height"
                android:layout_alignParentTop="true"
                android:background="@drawable/me_bg"/>
            <RelativeLayout 
                android:id="@+id/llSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Mine_share_marginTop"
                android:layout_marginRight="@dimen/Mine_share_marginRight"
                android:background="@drawable/content_nav_icon_setting"/>
            </RelativeLayout>
            <ImageView 
                android:id="@+id/imgHeader"
                android:layout_width="@dimen/Mine_header_size"
                android:layout_height="@dimen/Mine_header_size"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/Mine_header_marginTop"
                android:layout_marginLeft="@dimen/Mine_header_marginLeft"
                android:background="@drawable/me_undefine_avatar"/>
            <Button 
                android:id="@+id/btnMyself"
                android:layout_width="@dimen/Mine_btn_width_size"
                android:layout_height="@dimen/Mine_btn_height_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/Mine_btn_marginTop"
                android:layout_marginRight="@dimen/Mine_btn_marginRight"
                android:background="@drawable/btn_mine_myself"/>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Mine_share_marginRight"
                android:layout_marginLeft="@dimen/Mine_layout_margin"
                android:layout_marginRight="@dimen/Mine_layout_margin"
                android:layout_below="@id/imgHeader"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mine_name_text_color"
                    android:textSize="@dimen/Mine_name_text_size"
                    android:text="Keerthi"/>
                <TextView 
                    android:id="@+id/tvPresent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Mine_share_marginTop"
                    android:layout_marginBottom="@dimen/Mine_header_marginLeft"
                    android:textColor="@color/mine_present_text_color"
                    android:textSize="@dimen/Mine_present_text_size"
                    android:text="Hey,guys,Color-database derived from Sample Books @ Dainippon Ink and Chemicals Inc.,licensed to Adobe Systems Incorporated."/>
               <!--  
                <LinearLayout 
                    android:layout_width="fill_parent"
