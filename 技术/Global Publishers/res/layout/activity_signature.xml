<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/image_loading_bg"
    android:orientation="vertical" >
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />
    <TextView
        android:id="@+id/twoTitle" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mine_layout_marginTop"
        android:layout_marginLeft="@dimen/section_padding_horizontal"
        android:layout_marginBottom="@dimen/button_padding_right"
        android:textSize="@dimen/News_text_size_13"
        android:textColor="@color/detail_title_text_color"
        android:text="REQUIRED"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/home_line"/>
    <EditText
        android:id="@+id/editSignature" 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/signature_edit_height"
        android:padding="@dimen/Mine_item_text_marginLeft"
        android:textSize="@dimen/News_text_size_16"
        android:textColor="@color/subscribe_textcolor_color"
        android:textColorHint="@color/detail_title_text_color"
        android:hint="Please write down your signature here..."
        android:gravity="top|left"
        android:background="@null"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/home_line"/>
    </LinearLayout>
</LinearLayout>
