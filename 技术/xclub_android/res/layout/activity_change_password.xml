<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_background"
        android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/tvback"
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true">
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:background="@drawable/previous_back"/>
          </LinearLayout> 
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:textSize="24dp"
              android:textColor="@color/card_white"
              android:text="CHANGE PASSWORD"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:orientation="vertical">
     <EditText 
         android:id="@+id/etPwd"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:hint="Enter the original password"
         android:password="true"
         android:padding="5dp"
         android:singleLine="true"
         android:textSize="17sp"
         android:textColor="#AAAAAA"
         android:background="@drawable/edittext_backgroud"/>
      <EditText 
         android:id="@+id/etNewPwd"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="12dp"
         android:hint="Enter a new password"
         android:singleLine="true"
         android:padding="5dp"
         android:password="true"
         android:textSize="17sp"
         android:textColor="#AAAAAA"
         android:background="@drawable/edittext_backgroud"/>
      <EditText 
         android:id="@+id/etConfirmNewPwd"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="12dp"
         android:hint="Confirm the new password"
         android:padding="5dp"
         android:password="true"
         android:singleLine="true"
         android:textSize="17sp"
         android:textColor="#AAAAAA"
         android:background="@drawable/edittext_backgroud"/>
      
      </LinearLayout>
        <Button 
             android:id="@+id/btComplete"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="29dp"
             android:layout_marginRight="29dp"
             android:layout_marginTop="72dp"
             android:background="@drawable/change_pwd_confirm_selector"/>

</LinearLayout>
