<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/layout_login_false" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="180dip"
        android:background="@drawable/side_background"
        android:orientation="vertical">
      <ImageView 
          android:id="@+id/login_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="33dp"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/avatar_icon_big"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="15dp"
          android:textSize="15sp"
          android:textColor="#5A5A5A"
          android:text="CLICK TO LOGIN"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_line1"/>
        
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:background="@drawable/log_in_with"/> 
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
         android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_line1"/>   
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp">
        <ImageView 
            android:id="@+id/login_email"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/email"/>
        <ImageView 
            android:id="@+id/login_phone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone"/>
        <ImageView 
            android:id="@+id/login_facebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/facebook"/>
        <ImageView 
            android:id="@+id/login_twitter"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/twitter"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_line2"/>
        <LinearLayout
            android:id="@+id/layout_set" 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="78dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/set"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:textSize="15dp"
                android:textColor="#8C8C8C"
                android:textStyle="bold"
                android:text="Setting"/>
            </LinearLayout>
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_line2"/>
        <LinearLayout
            android:id="@+id/layout_contact" 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="78dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/suggest_1"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:textSize="15dp"
                android:textColor="#8C8C8C"
                android:textStyle="bold"
                android:text="Suggestion"/>
    </LinearLayout>
    <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/background_line2"/>
    </LinearLayout>
    </LinearLayout>
     <!-- 登陆后      个人中心 -->
    <LinearLayout
        android:id="@+id/layout_login_true" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/personal_background"
        android:visibility="gone"
        android:orientation="vertical">
      <LinearLayout 
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
      <ImageView 
          android:id="@+id/imgHeader"
          android:layout_width="64dp"
          android:layout_height="64dp"/>
      <LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="15dp"
          android:orientation="vertical">
          <TextView 
              android:id="@+id/tvUserName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFFFF"
              android:textStyle="bold"
              android:textSize="16sp"
              android:text="Version"/>
          <RelativeLayout
              android:id="@+id/layout_level"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="horizontal">
           <ImageView
               android:id="@+id/imgLevel" 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"/>
          <TextView 
              android:id="@+id/tvLevel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/imgLevel"
              android:layout_toRightOf="@+id/imgLevel"
              android:textColor="#FFFFFF"
              android:textStyle="bold|italic"
              android:textSize="12sp"/>
          </RelativeLayout>
          <TextView 
              android:id="@+id/tvAdmin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:layout_marginTop="10dp"
              android:textSize="12sp"
              android:textColor="@color/level_golden"/>
      </LinearLayout>
      <ImageView 
          android:id="@+id/imgCheck_in"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          android:layout_marginLeft="25dp"
          android:background="@drawable/cheecked_in"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/line_bg"/>
