<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_background"
        android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/tvback"
          android:layout_width="30dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true">
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_back_selector"/>
          </LinearLayout>
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:textSize="24dp"
              android:textColor="@color/card_white"
              android:text="Search"/>
          
    </RelativeLayout>
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="45dp"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="11dp"
             android:layout_marginRight="11dp">
          <Button
              android:id="@+id/btSearch"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginLeft="5dp"
              android:background="@drawable/search_button_selector"/>
          <LinearLayout
              android:id="@+id/layout_search" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@+id/btSearch"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="@drawable/edittext_backgroud">
           <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_alignParentLeft="true"
              android:layout_gravity="center_vertical"
              android:background="@drawable/oval_search_bg"/>
           <EditText
              android:id="@+id/search_word"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginLeft="5dip"
              android:background="@null"
              android:hint="Please enter the search content"
              android:imeOptions="actionSearch"
              android:singleLine="true"
              android:textColor="#676767"
              android:textColorHint="#acacac"
              android:textSize="15sp" />
           </LinearLayout>
         </RelativeLayout>
         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/search_hot_bg"
             android:layout_marginTop="15dp"
             android:paddingLeft="11dip"
              android:paddingRight="11dip"
             android:orientation="vertical">
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="52dp"
              android:orientation="horizontal">
              <ImageView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:background="@drawable/hot_icon_bg"/>
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="10dp"
                  android:textColor="#212121"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:text="Popular searches Recommended"/>
          </LinearLayout>
         <GridView
              android:id="@+id/gvHot"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:cacheColorHint="@color/black"
              android:columnWidth="40dip"
              android:fadingEdge="none"
              android:gravity="center_horizontal"
              android:horizontalSpacing="7dip"
              android:listSelector="@drawable/btn_hot_selector"
              android:numColumns="2"
              android:layout_marginBottom="10dp"
              android:scrollbarStyle="outsideOverlay"
              android:scrollingCache="false"
              android:stretchMode="columnWidth"
              android:verticalSpacing="7dip"/>
       </LinearLayout>
</LinearLayout>
