<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
     <LinearLayout 
              android:id="@+id/layout_post"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_toLeftOf="@+id/imgPost"
              android:background="@drawable/post_item_report_bg"
              android:orientation="horizontal">
           <ImageView
              android:id="@+id/imgPost_score"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_vertical"
              android:src="@drawable/post_item_score"/>
        <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:background="@drawable/post_comment_line"/>
       <ImageView
              android:id="@+id/imgPost_commtent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_vertical"
              android:src="@drawable/post_item_comment_bg"/>
       <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:background="@drawable/post_comment_line"/>
        <ImageView
              android:id="@+id/imgPost_report"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_vertical"
              android:src="@drawable/btn_report_selector"/>
        <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:background="@drawable/post_comment_line"/>
              </LinearLayout>

</LinearLayout>
