<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
    <LinearLayout
        android:id="@+id/layout_content" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:background="@drawable/post_item_bg">
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="4dp">
          <ImageView 
            android:id="@+id/imghead"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"/>
        <TextView 
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imghead"
            android:layout_marginTop="10dp"
            android:maxLength="17"
            android:textColor="#828282"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="KimKykie"/>
         <TextView 
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imghead"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tvName"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            android:text="2015-04-23"/>
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="20dp"
             android:orientation="horizontal">
         <ImageView
             android:id="@+id/IvGood"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:background="@drawable/scan"/>
         <TextView 
             android:id="@+id/tvNumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_gravity="center_vertical"
             android:textColor="#878585"
             android:textSize="12sp"
             android:text="568"/>
         <ImageView
             android:id="@+id/IvMessage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_gravity="center_vertical"
             android:background="@drawable/comment"/>
         <TextView 
             android:id="@+id/tvMessage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="8dp"
             android:textColor="#878585"
             android:textSize="12sp"
             android:text="289"/>
         </LinearLayout>
       </RelativeLayout>
       <TextView 
           android:id="@+id/tvTitle"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="14dp"
           android:layout_marginRight="14dp"
           android:textSize="17sp"
           android:textColor="#444444"
           android:textStyle="bold"
           android:text="App permision management"/>
       <TextView 
           android:id="@+id/tvContent"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="14dp"
           android:layout_marginRight="14dp"
           android:layout_marginBottom="10dp"
           android:maxLines="5"
           android:textSize="13sp"
           android:textColor="#707070"
           android:text="Android M was launched days ago and one hyped feature app permission management."/>
       <LinearLayout
           android:id="@+id/layout_bottom" 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_marginBottom="15dp"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/imgpicture1" 
               android:layout_width="100dp"
               android:layout_height="125dp"
               android:layout_gravity="center_vertical"/>
           <ImageView
               android:id="@+id/imgpicture2"  
               android:layout_width="100dp"
               android:layout_height="125dp"
               android:layout_marginLeft="8dp"
               android:layout_gravity="center_vertical"/>
           <ImageView
               android:id="@+id/imgpicture3"   
               android:layout_width="100dp"
               android:layout_height="125dp"
               android:layout_marginLeft="8dp"
               android:layout_gravity="center_vertical"/>
       </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/post_top"/>
        <TextView
            android:id="@+id/tvTitle_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:textSize="17sp"
            android:textColor="#444444"
            android:textStyle="bold"
            android:text="App permision management"/>
    </LinearLayout>
        <ImageView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/line_set_bg"/>
    </LinearLayout>
</LinearLayout>