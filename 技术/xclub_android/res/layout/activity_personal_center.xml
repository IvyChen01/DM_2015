<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
   <RelativeLayout
        android:id="@+id/personal_top" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_background"
        android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/tvback"
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true">
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_back_selector"/>
          </LinearLayout> 
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:textSize="24dp"
              android:textColor="@color/card_white"
              android:text="HOME PAGE"/> 
    </RelativeLayout>
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/personal_top"
        android:background="@drawable/personal_center_bg"/>
    <LinearLayout
        android:id="@+id/layout_centre" 
        android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/personal_top"
         android:layout_marginTop="110dp"
         android:orientation="vertical">
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
          android:layout_marginLeft="21dp"
         android:orientation="horizontal">
       <ImageView 
           android:id="@+id/imghead"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@drawable/img_head_bg"/>
       <TextView 
           android:id="@+id/tvName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:layout_marginLeft="10dp"
           android:textSize="20sp"
           android:textStyle="bold"
           android:textColor="#444444"
           android:text="Version"/>
         </LinearLayout>
         <RelativeLayout
             android:id="@+id/layout_level" 
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_marginTop="18dp"
             android:layout_marginLeft="21dp"
             android:layout_marginRight="21dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:textColor="#000000"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:text="Level"/>
              <TextView
                  android:id="@+id/tvpoints" 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="10dp"
                  android:textSize="12sp"
                  android:textColor="#808080"
                  android:text="90 points"/>
              <RelativeLayout
                  android:id="@+id/relativelayout_level" 
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_toLeftOf="@+id/tvpoints"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="20dp">
              <TextView 
                  android:id="@+id/tvLevel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:textStyle="bold|italic"
                  android:textSize="12sp"/>
              <ImageView 
                  android:id="@+id/imgLevel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                  android:layout_toLeftOf="@+id/tvLevel"
                  android:layout_alignBottom="@+id/tvLevel"/>
              </RelativeLayout>
              <TextView
                  android:id="@+id/tvAdmin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toLeftOf="@+id/tvpoints"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:visibility="gone"
                  android:textSize="12sp"
                  android:textColor="@color/level_golden"/>
         </RelativeLayout>
         <ImageView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="21dp"
             android:layout_marginRight="21dp"
             android:background="@drawable/line_set_bg"/>
         <RelativeLayout
             android:id="@+id/ll_Information" 
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_marginLeft="21dp"
             android:layout_marginRight="21dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:textColor="#000000"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:text="Personal information"/>
              
              <ImageView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="12dp"
                  android:layout_centerVertical="true"
                  android:src="@drawable/set_bg"/>
         </RelativeLayout>
         <ImageView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="21dp"
             android:layout_marginRight="21dp"
             android:background="@drawable/line_set_bg"/>
         <RelativeLayout
             android:id="@+id/updatePwd" 
             android:layout_width="fill_parent"
             android:layout_height="50dp"
             android:layout_marginLeft="21dp"
             android:layout_marginRight="21dp">
             <TextView
                 android:id="@+id/tvUpdatePassword" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:textColor="#000000"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:text="Change password"/>
              
              <ImageView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="12dp"
                  android:layout_centerVertical="true"
                  android:src="@drawable/set_bg"/>
         </RelativeLayout>
         <ImageView 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="21dp"
             android:layout_marginRight="21dp"
             android:background="@drawable/line_set_bg"/>
     </LinearLayout>
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/layout_centre"
         android:orientation="vertical">
     <Button
         android:id="@+id/btSignOut" 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/xclub_sign_out_selector"
         android:layout_marginTop="60dp"
         android:layout_marginLeft="29dp"
         android:layout_marginRight="29dp"
         android:textSize="18sp"
         android:textColor="#FFFFFF"
         android:textStyle="bold"
         android:text="LOG OUT"/>
     </LinearLayout>
</RelativeLayout>
