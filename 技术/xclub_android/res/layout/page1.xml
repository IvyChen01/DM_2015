<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_post_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_background" >
        <ImageView
            android:id="@+id/imgLocat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/locat_bg"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/title_xclub"/>
        <ImageView
            android:id="@+id/ivRright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@drawable/avatar_icon_bg" />
    </RelativeLayout>
        <com.transsion.infinix.xclub.view.XListView 
             android:id="@+id/listView"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/head_layout"
             android:fadingEdge="none"
             android:divider="@null"
             android:scrollbars="none"
             android:overScrollMode="never"
             android:background="@android:color/white"/>
        <RelativeLayout 
            android:id="@+id/layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menu_background">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageButton 
                android:id="@+id/bthome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/xclub_home_selector"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="9sp"
                android:textColor="#454545"
                android:text="HOME"/>
            </LinearLayout>
            
         <LinearLayout
            android:id="@+id/layout_search" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="58dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageButton 
                android:id="@+id/btSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/xclub_search_selector"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="9sp"
                android:textColor="#454545"
                android:text="SEARCH"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView 
                android:id="@+id/ivWriteCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="7dp"
                android:src="@drawable/write_code_bg"/>
</RelativeLayout>