<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/right_image_height"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/imgHeader"
            android:layout_width="@dimen/subscribe_text_height"
            android:layout_height="@dimen/subscribe_text_height"
            android:layout_marginLeft="@dimen/section_padding_horizontal"
            android:layout_gravity="center_vertical"
            android:background="@drawable/af_headprotriat_1"/>
        <TextView 
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_bar_padding"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/News_text_size_16"
            android:textColor="@color/default_text"
            android:text="Her world Singapore"/>
    </LinearLayout>
     <View 
         android:layout_width="fill_parent"
         android:layout_height="@dimen/line_height"
         android:background="@drawable/home_line"/>
    
</LinearLayout>
