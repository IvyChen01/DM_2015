<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_item_marginTop"
        android:layout_marginLeft="@dimen/subscribe_text_paddingleft"
        android:textSize="@dimen/News_text_size_12"
        android:textColor="@color/detail_title_text_color"
        android:text="2015.12.30 14:28"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_horizontal_paddingleft"
        android:layout_marginLeft="@dimen/list_item_horizontal_paddingleft"
        android:layout_marginRight="@dimen/Mine_text_marginLeft"
        android:orientation="horizontal">
       <ImageView 
            android:id="@+id/imgHead"
            android:layout_width="@dimen/subscribe_text_height"
            android:layout_height="@dimen/subscribe_text_height"
            android:background="@drawable/as_headportrait"/>
       <TextView 
           android:id="@+id/tvMessage"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/Mine_btn_marginRight"
           android:background="@drawable/systemmess_content_bg"
           android:textSize="@dimen/News_text_size_16"
           android:textColor="@color/subscribe_textcolor_color"
           android:text="Color-database derived from Sample Books @ Dainippon Ink and Chemicals,Inc.,licensed to Adobe Systems Incorporated."/>
        
    </LinearLayout>
    

</LinearLayout>
