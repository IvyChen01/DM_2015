<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/add_friends_item_height"
        android:paddingLeft="@dimen/channel_item_padding_left"
        android:paddingRight="@dimen/channel_item_padding_left"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/imgHeader"
            android:layout_width="@dimen/add_friends_item_head_size"
            android:layout_height="@dimen/add_friends_item_head_size"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/af_headprotriat_1"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/Mine_followers_marginLeft"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/News_text_size_17"
                android:textColor="@color/mine_name_text_color"
                android:text="Her world Singapore"/>
            <TextView 
                android:id="@+id/tvPresent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/channel_item_padding_left"
                android:textSize="@dimen/News_text_size_15"
                android:textColor="@color/detail_title_text_color"
                android:text="Merry Christmas"/>
        </LinearLayout>
        <ImageButton 
            android:id="@+id/btnFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:background="@drawable/af_btn_follow_normal"/>
    </LinearLayout>
         <View 
             android:layout_width="fill_parent"
             android:layout_height="@dimen/line_height"
             android:layout_marginTop="@dimen/channel_item_padding_left"
             android:background="@drawable/home_line"/>
    

</LinearLayout>
