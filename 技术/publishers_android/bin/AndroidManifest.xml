            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity 
            android:name="com.trassion.newstop.activity.SystemMessageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity 
            android:name="com.trassion.newstop.activity.FeedbackActivity"
